<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".options.MyOrderActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layout_lineardata"
        android:background="@color/grey_light">
    </View>
    <LinearLayout
        android:id="@+id/layout_lineardatarewardd"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/gen_white"
        android:elevation="10dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/myrewardsbutton"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="Start Shopping"
            android:textColor="@color/gen_white"
            android:textSize="18sp"
            android:textAllCaps="false"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_lineardata"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Looks like you do not have any orders."
        android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="No rewards Yet"
        android:layout_below="@+id/layout_lineardatarewardd"
        android:gravity="center"
        android:textSize="15sp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclervieworder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout_lineardatarewardd">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>